<style>


html, body { height: 100%; padding: 0; margin: 0; }
div { width: 50%; height: 50%; float: left; }
#div1 { background: #0080FF; }
#descriptiondiv { background: #3399FF; }
#specificationsdiv { background: #66B2FF; }
#div4 { background: #99CCFF; }
#style-image {border-right: 1px solid #000;}


</style>


<div id="div1">
<p id="notice"><%= notice %></p>

<p>
  <h1> <strong>Project name:</strong> <%= @project.title %></h1>
</p>


<%- if current_user.try(:id) == @project.user_id  or current_user.try(:admin?) %>
	<%= link_to 'Edit', edit_project_path(@project) %> |
<% end %>
<%= link_to 'Back', projects_path %>
</div>
<div id="descriptiondiv">
	<p>
  		<h2> <strong>Description:</strong> </h2>
		<%= @project.description %>   		
	</p>
</div>
<div id="specificationsdiv">
<p>
  <h2> <strong>Category:</strong> <%= @project.category.name %> </h2>
  
</p>

<p>
  <h2> <strong>User:</strong> <%= @project.user_id %> </h2>   
</p>

<p>
  <h3> <strong>Deliverydate:</strong> <%= @project.deliverydate %> </h3>
  
</p>

<p>
  <strong>Promise:</strong>
  <%= @project.promise_id %>
</p>
<p>
  <strong>Donationamount:</strong>
  <%= @project.donationamount %>
</p>

</div>
<div id="div4">
  <%= image_tag @project.image.url(:large), :class => "style-image" %>
  <td><%= button_to "Add project to wishlist", :controller => "wishlists", :action => "create", :user_id => current_user.try(:id), :project_id => @project.id, :method => :"post" %> </td>
  <td><%= button_to "Donate 1", :controller => "user_fund_projects", :action => "create", :user_id => current_user.try(:id), :project_id => @project.id, :amount => 1, :method => :"post" %>
  <td><%= button_to "Donate 10", :controller => "user_fund_projects", :action => "create", :user_id => current_user.try(:id), :project_id => @project.id, :amount => 10, :method => :"post" %>
  <td><%= button_to "Donate 20", :controller => "user_fund_projects", :action => "create", :user_id => current_user.try(:id), :project_id => @project.id, :amount => 20, :method => :"post" %>
  <td><%= button_to "Donate 30", :controller => "user_fund_projects", :action => "create", :user_id => current_user.try(:id), :project_id => @project.id, :amount => 100, :method => :"post" %>
 </td>

</div>



