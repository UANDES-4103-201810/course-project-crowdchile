<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<style>
	#allprojects {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

#allprojects td, #allprojects th {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: center;
}

#allprojects tr:nth-child(even){background-color: #f2f2f2;}



#allprojects th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: center;
    background-color: #004C99;
    color: white;
}
</style>
<body>




</body>
<table id="allprojects">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Donationamount</th>
      <th>Category</th>
      <th>User</th>
      <th>Deliverydate</th>
      <th>Promise</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.donationamount %></td>
        <td><%= project.category.name %></td>
        <td><%= project.user_id %></td>
        <td><%= project.deliverydate %></td>
        <td><%= project.promise_id %></td>
        <td><%= link_to 'Show', project %></td>
	<% if project.user_id == current_user.try(:id) or current_user.admin %> %>
        	<td><%= link_to 'Edit', edit_project_path(project) %></td>
        	<td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

