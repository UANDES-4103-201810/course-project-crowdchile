<head>
<style>
{
  box-sizing: border-box;
}

/* Palette generated by Material Palette - materialpalette.com/blue/cyan */
.primary-color           { background: #2196F3; }
.primary-color--dark     { background: #1976D2; }
.primary-text--color     { color: #212121; }
.secondary-text--color   { color: #727272; }
.divider-color           { border-color: #B6B6B6; }

.main {
  background-color: lightblue;
}
form {
  background-color: #fff;
  font-family: serif;
  vertical-align: center;
  height: 100vh;
  width: 80vw;
  margin: 10%;
  padding: 5%;
  -webkit-box-shadow: 0px 0px 5px 1px rgba(33,33,33,0.45);
     -moz-box-shadow: 0px 0px 5px 1px rgba(33,33,33,0.45);
          box-shadow: 0px 0px 5px 1px rgba(33,33,33,0.45);
}

legend {
  font-family: sans-serif;
  font-size: 24px;
  display: block;
  margin: 0 auto;
  padding: .5em 0;
  text-align: center;
  text-transform: uppercase;
  width: 100%;
}

label {
  display: block;
  letter-spacing: 4px;
  padding-top: 30px;
  text-align: center;
}

label .label__text {
  cursor: text;
  font-size: 20px;
  line-height: 20px;
  text-transform: uppercase;
  -webkit-transform: translateY(-34px);
     -moz-transform: translateY(-34px);
      -ms-transform: translateY(-34px);
          transform: translateY(-34px);
  transition: all 0.4s ease;
}

label input {
  background-color: transparent;
  border: 0;
  border-bottom: 2px solid;
  font-size: 36px;
  letter-spacing: -1px;
  outline: 0;
  padding: 5px 20px;
  text-align: center;
  width: 60vw;
  max-width: 800px;
}

label input:focus {
  border-bottom-color: #1976D2;
}

label input:focus + .label__text {
  color: #212121;
  font-size: 13px;
  -webkit-transform: translateY(-74px);
     -moz-transform: translateY(-74px);
      -ms-transform: translateY(-74px);
          transform: translateY(-74px);
}

label input:valid + .label__text {
  font-size: 13px;
  -webkit-transform: translateY(-74px);
     -moz-transform: translateY(-74px);
      -ms-transform: translateY(-74px);
          transform: translateY(-74px);
}

button {
  border: 2px solid #1976D2;
  border-radius: 10px;
  color: white;
  cursor: pointer;
  display: block;
  font-size: 20px;
  margin: 50px auto;
  padding: 15px 30px;
  text-transform: uppercase;
  transition: all 500ms;
  width: 60vw;
  max-width: 800px;
  z-index: 1;
}

button:hover, button:focus {
  border: 2px solid #1976D2;
  background-color: white;
  color: #1976D2;
  
}
field {
	vertical-align: center;
}

</style>
</head>

<body>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</body>
