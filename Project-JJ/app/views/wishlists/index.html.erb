<p id="notice"><%= notice %></p>

<h1>Wishlists</h1>
<style>
	#allprojects {
    font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

#allprojects td, #allprojects th {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: center;
}

#allprojects tr:nth-child(even){background-color: #f2f2f2;}



#allprojects th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: center;
    background-color: #004C99;
    color: white;
}
</style>
<body>




</body>
<table id="allprojects">
  <thead>
	    <tr>
	      <th>Title</th>
	      <th>Description</th>
	      <th>Donationamount</th>
	      <th>Category</th>
	      <th>Deliverydate</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
  
    <% @wishlists.each do |wishlist| %>
      <tr>
	<% if wishlist.user_id == current_user.id %>
	
	  

	  <tbody>
	    <% @projects.each do |project| %>
		<% if wishlist.project_id == project.id %>
	      <tr>
		<td><%= project.title %></td>
		<td><%= project.description %></td>
		<td><%= project.donationamount %></td>
		<td><%= project.category.name %></td>
		<td><%= project.deliverydate %></td>
		<td><%= link_to 'Show', project %></td>
	      </tr>
	    <% end %>
		<% end %>
	  </tbody>
		<% end %>
	      </tr>
    <% end %>
</table>


